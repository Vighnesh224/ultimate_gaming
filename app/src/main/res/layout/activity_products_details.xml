<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context="com.prisminfoways.ultimate.activity.ProductsDetailsActivity">

    <RelativeLayout
        android:id="@+id/rel_main_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_gravity="center"
        android:background="@color/color_white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/img_back" />

        <com.prisminfoways.ultimate.customview.CTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp"
            android:text="Product Details"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_16sdp" />



    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rel_main_header"
        android:background="@color/light_gray" />


    <ScrollView
        android:scrollbars="none"
        android:layout_below="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:id="@+id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:src="@drawable/pubg_place"/>

            <androidx.cardview.widget.CardView
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_210sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:id="@+id/crdView"
                app:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                android:minHeight="@dimen/_80sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.prisminfoways.ultimate.customview.CTextView
                            android:layout_centerVertical="true"
                            android:id="@+id/txtProductName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ORGANIC JASMIN"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp" />

                    </RelativeLayout>

                    <com.prisminfoways.ultimate.customview.CTextView
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:id="@+id/txtProductDes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loren Ipsum"
                        android:textColor="#626262"
                        android:textSize="@dimen/_15sdp" />

                    <RelativeLayout
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.prisminfoways.ultimate.customview.CTextView
                            android:layout_centerVertical="true"
                            android:id="@+id/txtPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_abovetext"
                            android:text="599.99"
                            android:textAlignment="center"
                            android:textColor="@color/selectTab"
                            android:textSize="@dimen/_18sdp" />

                        <com.prisminfoways.ultimate.customview.CTextView
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/txtDiscountPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200.00"
                            android:textAlignment="center"
                            android:textColor="@color/selectTab"
                            android:textSize="@dimen/_18sdp" />

                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crdDes"
                android:layout_below="@+id/crdView"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                android:minHeight="@dimen/_80sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.prisminfoways.ultimate.customview.CTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp" />

                        <com.prisminfoways.ultimate.customview.CTextView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:id="@+id/txtProductAllDes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.prisminfoways.ultimate.customview.CTextView
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/crdDes"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/txtBuy"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:background="@drawable/bg_join"
                android:gravity="center"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="BUY NOW"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>